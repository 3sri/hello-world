pipeline{
    agent any
    parameters {
        string(name: 'text', description: 'Please Enter QA text')
        choice(choices: 'Dev\nPrd', description: 'Please Select QA Env', name: 'ENV' )
        password(name: 'password' ,description: 'please eneter QA env password' )
    }
    stages {
       stage ('Confirmation') 
       {
         steps 
         {
                timeout(time: 10, unit: 'MINUTES') {
                input message: "Configuring ${params.text}. Do you want to proceed?", ok: 'Procced'
          }
       }
      }
        stage ('Deploy') {
            steps {
                echo "${params.ENV}"
                echo "${params.password}"
                echo "${params.text}"
            }
        }
    }
}
